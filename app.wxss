.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.main-container{
  display: flex;
  background-color: #F1F2F3; 
  flex-direction: column;
}
.wrap{
  height: 100%;
}
.mg-flex {
  display: flex;
}
.mg-flex-c {
  flex-direction: column;
}
.mg-flex-r {
  flex-direction: row;
}
.mg-flex-1 {
  flex:1
}
.mg-flex-2{
  flex:2
}
.mg-flex-j-start {
  justify-content: flex-start;
}
.mg-flex-j-end {
  justify-content: flex-end;
}
.mg-flex-a-start {
  align-items: flex-start;
}
.mg-flex-a-end {
  align-items: flex-end;
}
.mg-nowrap{
  flex-wrap: nowrap;
}
.mg-flex-a-center {
  align-items: center;
}
.mg-flex-j-center {
  justify-content: center;
}
.mg-content {
  padding-left: 42rpx;
  padding-right: 42rpx;
}

page {
  /* display: block; */
  color: #333;
  /* border-top: solid 2rpx #eee; */
  background: #fff;
  height: 100%;
}


.backgroundView {
  height: 2rpx;
  background: #eee;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
view,text {
  padding: 0;
  margin: 0;

}

.fl {
  float: left;
}

.fr {
  float: right;
}

#fixedBg {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 98;
  background: #000;
  opacity: 0.6;
}

.headTab {
  display: flex;
  position: fixed;
  top: 0;
  width: 100%;
  left: 0;
  background-color: #fff;
  z-index: 999;
}

.headTab span {
  flex: 1;
  border-bottom: solid 4rpx #fff;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.headTab span.showMenu {
  border-bottom-color: #e02e24;
  color: #e02e24;
}

.navigator-hover {
  background: none;
  opacity: 1;
}

.noData {
  display: block;
  width: 100%;
  background: none;
  text-align: center;
  padding-top: 50rpx;
  color: #666;
  font-size: 29rpx;
}

.noData image {
  display: block;
  margin: 29rpx auto;
  width: 157rpx;
  height: 114rpx;
}

/*color  */

.fontColor333 {
  color: #333;
}

.fontColor666 {
  color: #666;
}

.fontColor999 {
  color: #999;
}

.fontLineColor {
  color: #e0e3eb;
}

.fontThemeColor {
  color: #eee;
}

.fontRedColor {
  color: #e02e24;
}

.fontBlueColor {
  color: #4777e5;
}

.searchView {
  display: flex;
  font-size: 28rpx;
  width: 100%;
  background: #eee;
  color: #666;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 97;
}

/* 搜索框+搜索按钮 */

.searchView view:nth-child(1) {
  margin-top: 18rpx;
  margin-left: 3%;
  display: block;
  float: left;
  width: 60rpx;
  height: 60rpx;
  background: #fff;
}

.searchView view image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  display: block;
}

.searchView view:nth-child(3) {
  margin-top: 18rpx;
  display: block;
  width: 60rpx;
  height: 60rpx;
  background: #fff;
}

.delectImg {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin-top: 18rpx;
}

