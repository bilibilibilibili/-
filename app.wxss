/*提示弹窗*/

#msg {
  position: fixed;
  width: 70%;
  top: 50%;
  left: 15%;
  margin-top: -60rpx;
  line-height: 60rpx;
  z-index: 99999;
  font-size: 0.24rem;
  text-align: center;
}

#msg span {
  background: black;
  opacity: 0.8;
  border-radius: 5rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  display: inline-block;
}

#loading_p {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: none;
  margin: 0;
  z-index: 1000000;
}

#loading_p image {
  display: block;
  margin: 0 auto;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
  width: 40rpx;
  height: 40rpx;
}

/*底部菜单  */

.public_footer {
  position: fixed;
  z-index: 97;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 114rpx;
  border-top: solid 1px #e0e3eb;
  background: #fff;
  display: flex;
}

.public_footer > navigator {
  flex: 1;
  text-align: center;
}

.public_footer image {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx auto;
}

.public_footer  navigator > text {
  display: block;
  font-size: 24rpx;
  color: #333;
}

.public_footer navigator.showMenu > text {
  color: #e02e24;
}

.public_footer navigator.por {
  position: relative;
}

.public_footer view.poa {
  position: absolute;
  top: -123rpx;
  right: 0;
  left: 0;
  background-color: #fff;
  height: 122rpx;
  z-index: 97;
}

.public_footer view.poa text {
  display: block;
  width: 100%;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  line-height: 60rpx;
}

.public_footer view.poa text:first-child {
  border-bottom: solid 1px #e0e3eb;
}

#fixedBg.fixedBgTransport {
  opacity: 0.3;
  background: #606060;
  z-index: 95;
}

#msg {
  position: fixed;
  width: 70%;
  top: 50%;
  left: 15%;
  margin-top: -60rpx;
  line-height: 60rpx;
  z-index: 99999;
  font-size: 24rpx;
  text-align: center;
}

#msg text {
  background: black;
  opacity: 0.8;
  border-radius: 5rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  display: inline-block;
}

