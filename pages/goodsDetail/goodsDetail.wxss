/* pages/goodsDetail/goodsDetail.wxss */
page {
  padding-bottom: 150rpx;
  overflow-x: hidden;
}

.goodsDetail {
  padding: 15rpx;
  height: 200rpx;
  overflow: hidden;
}

.price {
  width: 100%;
  font-size: 38rpx;
  color: #e02e24;
  font-weight: bold;
  height: 50rpx;
  margin-top: 20rpx;
}

.price text:last-child {
  font-size: 23rpx;
  padding-left: 10rpx;
  color: #999;
}

.endTime {
  height: 40rpx;
  color: #999;
  font-size: 25rpx;
}

.countTime {
  float: left;
  width: 88%;
  color: #e02e24;
}

.fightNum {
  float: left;
  width: 12%;
  font-size: 25rpx;
}

.everyDay {
  float: left;
  display: block;
  width: 120rpx;
  padding: 2rpx 6rpx;
  border: solid 1rpx #e02e24;
  font-size: 26rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #fff0f3;
  color: #e02e24;
}

.goodsName {
  /* float: left; *//* width: 80%; */
  color: #333;
  font-size: 26rpx;
  display: block;
  margin-top: 10rpx;
}

.ruleView {
  margin-top: 20rpx;
  background-color: #fff0f3;
  border-top: solid 20rpx #e0e3eb;
  padding-bottom: 10rpx;
  padding: 30rpx;
  overflow: hidden;
  /* bottom:  */
}

.ruleView text {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: block;
  font-size: 30rpx;
  color: #999;
}

.ruleView text:nth-child(1), .ruleView text:nth-child(2),
.ruleView text:nth-child(3) {
  color: #e02e24;
}

.explain {
  display: block;
  width: 95%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: solid 10rpx #e0e3eb;
  font-size: 30rpx;
  color: #333;
  padding-left: 5%;
  padding-bottom: 20rpx;
}

/*分享  */

.shareView {
  width: 15%;
  float: right;
  margin: 0 0;
}

.shareView image, .shareView text {
  text-align: center;
  display: block;
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
}

.shareView text {
  width: auto;
  color: #666;
  margin-top: 7rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 25rpx;
}

/*底部  */

.footer {
  position: fixed;
  background-color: #fff;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 90;
}

.footer view {
  float: left;
  /* box-shadow: 10px 10px 5px #888888; */
  border-top: solid 1rpx #e0e3eb;
  font-size: 34rpx;
  height: 90rpx;
  color: #666;
  line-height: 90rpx;
  text-align: center;
}

.goFightBuy {
  background-color: #e02e24;
  width: 75%;
}

.goHome {
  margin-top: 10rpx;
  width: 25%;
  margin: 0 0;
  /* background-color: yellow */
}

.goHome image, .goHome text {
  text-align: center;
  display: block;
  margin: 0 auto;
  width: 40rpx;
  height: 40rpx;
}

.goHome image, .shareView image {
  margin: 10rpx auto;
}

.goHome text {
  width: auto;
  color: #666;
  margin-top: 7rpx;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 24rpx;
}

.goFightBuy text {
  /* float: right; */
  height: 90rpx;
  line-height: 90rpx;
  padding-right: 30rpx;
  font-size: 33rpx;
  color: #fff;
}

.goFightBuy text:last-child {
  color: #e0e3eb;
  font-size: 27rpx;
}

.imgPar {
  position: relative;
  overflow: hidden;
  /* width: 100%; */
}

.imgPar image {
  width: 100%;
  display: block;
}

.wxParse text {
  display: block;
  text-align: center;
}

/*登录弹框  */

.loginView {
  position: fixed;
  top: 35%;
  width: 600rpx;
  left: 50%;
  margin-left: -300rpx;
  height: 480rpx;
  margin-top: -240rpx;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 100;
}

/*登录  */

.loginExplain {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #666;
  font-size: 34rpx;
  margin-top: 20rpx;
}

.code, .phone {
  margin: 30rpx 40rpx 0 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: block;
}

.code input, .phone input {
  background-color: #eee;
  border-radius: 10rpx;
  font-size: 29rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 80%;
  padding-left: 30rpx;
  display: block;
  /* padding-top: 10rpx;
    padding-left: 30rpx; */
}

.code input {
  width: 300rpx;
  float: left;
  /* display: inline-block; */
}

.code text {
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  width: 160rpx;
  margin-right: 15rpx;
  float: right;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  background-color: #e02e24;
  font-size: 25rpx;
  border-left: solid 1rpx #e0e3eb;
}

.code text.sending {
  background: #fff;
  color: #e02e24;
  border: solid 1rpx #e02e24;
}

/*确定  */

.confrime {
  height: 75rpx;
  display: block;
  line-height: 75rpx;
  margin-top: 38rpx;
  border-top: solid 1px #eee;
  color: #e02e24;
  /* text-align: center */
  text-align: center;
  font-size: 35rpx;
}

.shareBtn {
  display: block;
  /* width: 90rpx; */
  height: 90rpx;
  margin-top: 10rpx;
  background: #fff;
  float: right;
  padding-right: 20rpx;
}

.shareBtn image, .shareBtn text {
  text-align: center;
  display: block;
  margin: 0 auto;
  width: 35rpx;
  height: 40rpx;
}

.shareBtn image,  {
  margin: 10rpx auto;
}

.shareBtn text {
  /* width: auto; */
  color: #666;
  margin-top: 7rpx;
  font-size: 25rpx;
  height: 30rpx;
  line-height: 30rpx;
  width: 100%;
  text-align: center;
  display: block;
}

.goodNmaeView {
  float: left;
  width: 83%;
}

swiper {
  border-bottom: 1rpx solid #d6d6d6;
  height: 768rpx;
  /* background:url("") no-repeat; */
  background-size: 100% 768rpx;
}

swiper view {
  width: 100%;
  height: 768rpx;
}
@import "../haveWin/guessLike.wxss";

.showSelectGoods {
  position: fixed;
  width: 100%;
  height: 800rpx;
  bottom: 0;
  background-color: #fff;
  z-index: 100;
  overflow: visible;
}

.selectTopView {
  height: 200rpx;
  border-bottom: solid 2rpx #eee;
}

.selectTopView image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 20rpx;
  top: -50rpx;
  background: yellow;
  z-index: 3000;
}

.selectTopView text {
  display: block;
  margin-left: 250rpx;
  width: 400rpx;
}

.selectTopView text:nth-child(3) {
  padding-top: 60rpx;
  color: #e02e24;
  font-size: 35rpx;
}

.selectTopView text:nth-child(4) {
  color: #666;
  font-size: 32rpx;
}

.colorView {
  border-bottom: solid 2rpx #eee;
  padding-bottom: 20rpx;
}

.colorView text {
  display: block;
  width: 100%;
  color: #333;
  padding: 20rpx 40rpx 0 40rpx;
  font-size: 30rpx;
}

.colorsAryView text {
  width: auto;
  padding: 15rpx;
  background: #eee;
  margin: 20rpx 0 0 40rpx;
  /* border: solid 1px #e0e3eb; */
  border-radius: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  display: block;
  float: left;
}

.colorsAryView text.selecton {
  color: #fff;
  background: #e02e24;
}

.selectFooter {
  position: fixed;
  background-color: #fff;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 90;
  background: #e02e24;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color: white;
}

.selectTopView > .close {
  display: block;
  width: 60rpx;
  height: 60rpx;
  background: url(https://m.meigo.com/activities/images/mini-programs/close.png) no-repeat center;
  background-size: 35rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
