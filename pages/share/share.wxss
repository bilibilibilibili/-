/*拼团须知弹框  */

.showFightExplai {
  position: fixed;
  top: 50%;
  width: 600rpx;
  left: 50%;
  margin-left: -300rpx;
  height: 480rpx;
  margin-top: -240rpx;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 100;
}

.showFightExplai > .close {
  display: block;
  width: 60rpx;
  height: 60rpx;
  background: url(https://m.meigo.com/activities/images/mini-programs/close.png) no-repeat center;
  background-size: 35rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.showFightExplai span {
  display: block;
  margin-top: 30rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: solid 1rpx #eee;
}
.showFightExplai text{
  display: block;
  /* width: 100%; */
